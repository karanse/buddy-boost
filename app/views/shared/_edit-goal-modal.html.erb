<button type="button" class="btn btn-edit-goal align-self-end" data-toggle="modal" data-target="#editGoalModalCenter-<%=goal.id%>">
  <i class="fas fa-pencil-alt"></i>
</button>

<!-- Modal -->
<div class="modal fade" id="editGoalModalCenter-<%=goal.id%>" tabindex="-1" role="dialog" aria-labelledby="editGoalModalCenter--<%=goal.id%>" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editgoaltitle">Edit goal</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <%= render "shared/edit-goal-form", goal: goal %>
      </div>
    </div>
  </div>
</div>
