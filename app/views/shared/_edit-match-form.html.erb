<div class="">
  <div class="mt-4 listing-form">
    <%= simple_form_for @match do |f| %>
      <%= f.input :status, label: "Cancel your buddy match", as: :select, collection: Match::MATCH_STATUSES.reject { |category| category != "cancelled" }, :selected => "cancelled", html_input: "required" %>
      <%= f.input :cancel_reason, label: "Let us know why you're cancelling the match", as: :text, placeholder: "For example: My buddy doesn't respond." %>
      <%= f.submit class: "btn btn-primary mt-1 mb-4"%>
    <% end %>
  </div>
</div>
