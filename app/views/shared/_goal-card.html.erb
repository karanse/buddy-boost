<% if goal.matched == false %>
  <div class="card w-100 mb-2 white-background-shadow" id="goal-card">
    <div class="card-body d-flex justify-content-between">
      <div class="pe-3">
        <h5 class="card-title"><%="#{goal.category.capitalize} goal" %> <span id="edit-goal-pen" class="align-self-end">
          <%= link_to goals_path do %>
            <i class="fas fa-pencil-alt"></i>
          <% end %> </span>
        </h5>
        <p class="card-text"><%= goal.description %></p>
        <p><strong>Deadline: <%= goal.deadline %></strong></p>
      </div>
      <div class="d-flex flex-column justify-content-start">
        <a href="#" class="btn btn-primary match-button">Match me!</a>
      </div>
    </div>
  </div>
<% end %>
