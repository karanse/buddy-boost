<% if goal.matched == false %>
  <div class="card w-100 my-2 white-background-shadow" id="goal-card">
    <div class="card-body d-flex justify-content-between">
      <div class="pe-3">
        <h5 class="card-title"><%="#{goal.category.capitalize} goal" %></h5>
        <p class="card-text"><%= goal.description %></p>
        <p><strong>Deadline: <%= goal.deadline %></strong></p>
      </div>
      <div>
      <%= simple_form_for @match, data: {controller: "match-goal", action: "submit->match-goal#match" } do |f| %>
        <%= f.input :goal, as: :hidden, input_html: { value: goal.id } %>
        <%= f.submit "Match me!", class: "btn btn-success mb-3 match-button" %>
        <a class="mx-2 btn-outline-primary"><%= link_to "Edit goal", goals_path  %></a>
      <% end %>
      </div>
    </div>
  </div>
<% end %>
