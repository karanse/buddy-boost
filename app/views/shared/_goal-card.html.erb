<% if goal.matched == false %>
  <div class="card w-100 mb-2 white-background-shadow" id="goal-card">
    <div class="card-body d-flex justify-content-between">
      <div class="pe-3">
        <h5 class="card-title d-flex align-items-center"><%="#{goal.category.capitalize} goal" %>
        <%# edit goal modal  %>
        <%= render "shared/edit-goal-modal", goal: goal %>
        <%# delete goal button  %>
        <%= link_to delete_goal_path(goal),
            data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
          <i data-feather="trash-2" class="trash-icon"></i>
        <% end %>
        </h5>
        <p class="card-text"><%= goal.description %></p>
        <p><strong>Deadline: <%= goal.deadline %></strong></p>
      </div>
      <div class="d-flex flex-column justify-content-start">
        <%= simple_form_for @match do |f| %>
          <%= f.input :goal, as: :hidden, input_html: { value: goal.id } %>
          <%= f.submit "Match me!", class: "btn btn-primary match-button" %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
