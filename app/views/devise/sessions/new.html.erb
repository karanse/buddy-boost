<h2 class="mt-5 mb-3 d-flex justify-content-center text-start">Log in </h2>
<div class="d-flex justify-content-center text-start">

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "login-form" }) do |f| %>
    <div class="blue-background">
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", class: "form-control-lg" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password", class: "form-control-lg" } %>
        <%= f.input :remember_me, as: :boolean, label: "Remember me", wrapper_html: { class: "form-check" } if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions" text-center">

        <%= f.button :submit, "Log in", class: "btn btn-primary" %>
      </div>

    <% end %>

    <%= render "devise/shared/links" %>

  </div>
</div>
