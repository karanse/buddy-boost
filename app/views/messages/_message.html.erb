<div id="message-<%= message.id %>" style="padding: 3px;" data-user-id="<%= message.user.id %>">
  <small>
    <% if message.user.photo.attached? %>
        <%= cl_image_tag message.user.photo.key, style: "width: 50px; height: 50px; border-radius:50%; object-fit: cover;"%>
    <% else %>
        <%= image_tag "https://api.dicebear.com/7.x/thumbs/svg?seed=#{message.user.email}&backgroundColor=0a5b83&shapeColor=69d2e7", class: "avatar-bordered-medium-shadow", alt: "avatar", style: "width: 50px; height: 50px; object-fit: cover;" %>
    <% end %>
    <strong class="name-padding"><%= message.user.first_name %></strong>
    <strong><%= message.user.last_name %></strong>
    <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
  </small>
  <p style="padding:5px;"><%= message.content %></p>
</div>
