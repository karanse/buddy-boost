<div class="" id="profile-page">

  <div class="d-flex justify-content-center w-100 mt-3">

  <%# ---------------- 0. TAB MENU ---------------- %>

    <div class="align-self-start mb-5 me-4 mt-3 blue-background">
      <h2 class="mb-4">Hi <%= current_user.first_name.capitalize %>! ðŸ‘‹</h2>
      <%= render "shared/profile-tabs" %>
    </div>

  <%# ---------------- ALL TAB CONTENT - start ---------------- %>

    <div id="all-tab-content" class="w-75">

      <%# ---------------- 1. PROFILE ---------------- %>

      <div class="tab-pane fade show active" id="profile-content" role="tabpanel" aria-labelledby="profile-tab">
        <%= render "shared/profile-card" %>
      </div>

      <%# ---------------- 2. DASHBOARDS ---------------- %>

      <div class="tab-pane fade" id="matches" role="tabpanel" aria-labelledby="match-tab">
        <div id="profile-dashboard-link" class="my-3 gray-background match-card">
          <%# <h3>Dashboards</h3> %>
          <%# <p>Help your buddy and yourself - the sky is the limit, you can do this! ðŸ’ª</p> %>
            <div class="d-flex justify-content-between align-items-start">
              <div class="list-card-container list-index">
                <% @matches.each do |match| %>
                  <%= render "shared/match-card", match: match %>
                <% end %>
            </div>
          </div>
        </div>
      </div>

      <%# ---------------- 3. GOALS ---------------- %>

      <div class="tab-pane fade" id="goals" role="tabpanel" aria-labelledby="goals-tab">

        <div id="profile-goals" class="my-3 gray-background">
          <%# <h3>Your goals</h3> %>

          <%# -- GOALS INDEX -- %>
          <div class="list-card-container d-flex flex-column align-items-center list-index">
              <% @goals.each do |goal| %>
                <%= render "shared/goal-card", goal: goal %>
              <% end %>
          </div>
          <!-- ADD GOAL BUTTON & MODAL FORM TO ADD GOAL -->
          <div>
            <%= render "shared/add-goal-modal" %>
          </div>

      </div>

      <%# -------------- ACHIEVEMENTS (EMPTY) --------------  %>
      <div class="tab-pane fade" id="achievements" role="tabpanel" aria-labelledby="achievements-tab">

        <div class="my-3 gray-background">
          <h3>Your achievements</h3>
          <p>Check out your achievements here. Celebrate success! ðŸŽ‰</p>
        </div>
      </div>

    </div>
    <%# ---------------- ALL TAB CONTENT - end ---------------- %>
  </div>
</div>
