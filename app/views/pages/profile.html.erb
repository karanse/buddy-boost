<div class="row justify-content-center">

  <div class="col-md-7 mt-5">

  <h2>Profile</h2>

    <div id="profile-info" >
      <h5>Profile information</h5>
      <div class="d-flex align-items-center justify-content-start">
        <img src="https://source.unsplash.com/boys-face-close-up-photography-n4KewLKFOZw" alt="avatar-photo" class="avatar-bordered-large">
        <ul id="profile-info-update">
          <li>Username / edit username
            <%= link_to "change my password" edit_user_password_path %>
          </li>
          <li>Full name / edit fullname</li>
          <li>Edit avatar option</li>
        </ul>
      </div>
    </div>

    <div id="profile-dashboard-link">
      <h5>Dashboards</h5>
      <p>Placeholder for: go to my buddy dashboard(s) (for each match: matches#show)</p>
    </div>

    <div id="profile-goals">
      <div id="profile-all-goals">
        <h5>Goals</h5>
        <p>Placeholder for: all my goals (goals#index)</p>
      </div>
      <div id="profile-add-goal">
        <p>Placeholder for: add a goal (goals#new)</p>
      </div>
      <div id="profile-edit-goal">
        <p>Placeholder for: edit goal (goals#edit)</p>
      </div>
    </div>

  </div>
</div>
